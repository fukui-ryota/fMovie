<body>
  <div class="row justify-content-md-center mt-5">
    <div class="col-6 border p-4">
    <form>
      <div class="row justify-content-md-center pb-4">
        <h2>ログイン</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="form-group">
          <label for="exampleInputEmail1"><%= f.label :email, "Eメールアドレス" %></label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Enter email' %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <label for="exampleInputEmail1"><%= f.label :password, "パスワード" %></label>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'Password' %>
        </div>
      </div>  

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "パスワードを記憶する" %>
        </div>
      <% end %>

      <div class="actions mt-3">
        <%= f.submit "ログインする", class: "btn btn-primary" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </form>
    </div>
  </div>
